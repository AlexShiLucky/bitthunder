config OF
	bool "Support Device Tree / Open Firmware framework"
	default n

config CACHE_MAINTENANCE
	bool
	default n

config MAIN_TASK_STACK_DEPTH
    int "Main task stack depth"
	default 512

config MAIN_TASK_PRIORITY
    int "Main task stack priority"
	default 0

menu "Subsystems"
config BLOCK
    bool "Block device support"
	default n

config VOLUME
    bool "Volume / Partition Manager"
	default n

config FILE
    bool
	select FS
	default y

config DIR
    bool "Directory I/O interfaces"
	default n

config I2C
    bool "I2C subsystem"
	default n

source os/src/rtc/Kconfig

config SPI
	bool "SPI subsystem"
	default n

config UART
 	bool "UART subsystem"
	default y

endmenu

config THREADS
    bool
	default y
	depends on !KERNEL_NONE
	depends on OS

config PROCESS
    bool
	default y
	depends on !KERNEL_NONE
	depends on OS

config TIMERS
	bool
	default y
	depends on !KERNEL_NONE
	depends on OS
