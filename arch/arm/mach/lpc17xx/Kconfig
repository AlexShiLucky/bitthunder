comment "LPC17xx Platform Options"


config MACH_LPC17xx_SYSCLOCK_IRC_FREQ
	int
	default 4000000

config HAS_CAN_0
	bool
	default n
	
config HAS_CAN_1
	bool
	default n

config HAS_I2C0
	bool
	default n
	
	
